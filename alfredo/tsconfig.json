{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@playwright/test"
    ]
  },
  "include": [
    "playwright.config.ts",
    "playwright.integration.config.ts",
    "playwright/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
